{
    "name": "smis/contract",
    "description": "smis.ro este o platforma de informare cu privire la finantarile europene, ce va integra functionalitati de implementare. Pentru a accesa aplicatia prin care potenÅ£ialii beneficiari din Romania vor putea solicita banii europeni pentru perioada de programare 2014-2020 sau 2021-2027 va rugam sa vizitati MySMIS.",
    "type": "project",
    "authors": [
        {
            "name": "SMIS",
            "email": "contact@smis.ro"
        }
    ],
    "require": {
        "php": ">=7.4.0",
        "ext-curl": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-zip": "*",
        "barryvdh/laravel-dompdf": "^2.0",
        "cache/filesystem-adapter": "^1.0",
        "cache/predis-adapter": "^1.0",
        "doctrine/dbal": "^2.10",
        "fideloper/proxy": "^4.0",
        "fruitcake/laravel-cors": "^2.0",
        "jackiedo/dotenv-editor": "^1.0",
        "laravel/fortify": "^1.7",
        "laravel/framework": "^8.0",
        "laravel/helpers": "^1.1",
        "laravel/legacy-factories": "^1.0",
        "laravel/tinker": "^2.0",
        "mehedi/stylist": "dev-master",
        "nao-pon/flysystem-google-drive": "~1.1",
        "nwidart/laravel-modules": "^8.0",
        "phpoffice/phpspreadsheet": "^1.16",
        "phpoffice/phpword": "^0.18.2",
        "rairlie/laravel-locking-session": "^1.1",
        "rap2hpoutre/fast-excel": "^3.0",
        "spatie/laravel-backup": "^6.14",
        "swayok/alternative-laravel-cache": "^5.4",
        "symfony/intl": "^5.0",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.0",
        "beyondcode/laravel-dump-server": "^1.0",
        "beyondcode/laravel-query-detector": "^1.0",
        "facade/ignition": "^2.3.6",
        "fakerphp/faker": "^1.9.1",
        "laravel/sail": "^1.0.1",
        "mockery/mockery": "^1.4.2",
        "nunomaduro/collision": "^5.0",
        "phpunit/phpunit": "^9.3.3"
    },
    "autoload": {
        "classmap": [
          "database"
        ],
        "psr-4": {
            "Smis\\": "app/",
            "Modules\\": "Modules/",
            "Themes\\": "Themes/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": "dist",
        "platform": {
            "ext-pcntl": "7.4",
            "ext-posix": "7.4",
            "php": "7.4.0"
        },
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "nwidart/laravel-modules"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "merge-plugin": {
            "require": [
                "Modules/*/composer.json",
                "Themes/*/composer.json"
            ],
            "merge-extra": true,
            "merge-extra-deep": true,
            "merge-scripts": true
        }
    }
}
